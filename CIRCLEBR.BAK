#include<stdio.h>
#include<conio.h>
#include<graphics.h>
main()
{
	int gd=DETECT,gm,d,x,y,r;
	initgraph (&gd,&gm,"c:\\tc\\bgi");
	printf("\nEnter radius of circle:");
	scanf("%d",&r);
	d=3-(2*r);
	x=0;
	y=r;
	putpixel(320+x,240-y,1);
	for(x=0;x<=y;x++)
	{
		   if(d<0)
		   d=d+(4*x)+6;
		   else
		   {
			d=d+4*(x-y)+10;
			y--;
		   }
		   putpixel(320+x,240-y,1);
		   putpixel(320-x,240-y,1);
		   putpixel(320+x,240+y,1);
		   putpixel(320-x,240+y,1);
		   putpixel(320+x,240-y,1);
		   putpixel(320-x,240-y,1);
		   putpixel(320+x,240+y,1);
		   putpixel(320-x,240+y,1);
	}
	getch();
	closegraph();
}



